<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
        <item name="android:windowBackground">@drawable/background_12dp</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">@dimen/dimen_12dp</item>
        <item name="cornerSizeTopLeft">@dimen/dimen_12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="MiniControllerCustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MaterialButtonCustomStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="cornerRadius">@dimen/dimen_8dp</item>
    </style>


    <style name="TextView16Medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView12Regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">#A3A3A4</item>
    </style>
    <style name="TextView18Bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/base_blue</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="tint">@color/white</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>


</resources>